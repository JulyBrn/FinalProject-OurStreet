{% extends 'base.html.twig'%}

 {% block stylesheets %}
 <link rel="stylesheet" type="text/css" href="{{ asset('css/artistPage.css') }}"/>
{% endblock %}


{% block body %}
<div class="artist-container">
<div class="left">
    <img src="{{ artiste.image }}" alt="Elephant at sunset">
    <div class="followArtist">
        <h4> Nombre de Followers: {{artiste.followers|length}} 
         {% if app.user %}
            {% if artiste.followers != app.user %}
                <a href="{{path('follow', {"id": artiste.id})}}">Suivre </a></h4>
            {% else %}
                <a href="{{path('removeFollow', {"id": artiste.id})}}">Ne plus suivre </a></h4>
            {% endif %}
        {% endif %}
    </div>  
</div>

<div class="right">
    <h1>{{ artiste.name }}</h1>
    <div class="underName"></div>
    {{ artiste.content | raw }}
</div>
</div>


<h2 class="gallery">Galerie</h2>
<div class="container">
    {% for picture in artiste.artworks %}
        <div class="artwork-img">
            <a href="{{ path('show_artwork',{'id': picture.id}) }}">
                <img src='{{picture.picture}}' >
            </a>
        </div>
    {% endfor %}
</div>

{% endblock %}