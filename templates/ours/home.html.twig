{% extends 'base.html.twig'%}
 {% block stylesheets %}
 <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}"/>
{% endblock %}
{% block body %}
    {# Carousselle  #}
    <div class="galleryContainer">
        <div class="slideShowContainer">
            <svg onclick="plusSlides(-1)" id="prevBtn" width="30px" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="arrow-left" class="svg-inline--fa fa-arrow-left fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                <path fill="currentColor" d="M257.5 445.1l-22.2 22.2c-9.4 9.4-24.6 9.4-33.9 0L7 273c-9.4-9.4-9.4-24.6 0-33.9L201.4 44.7c9.4-9.4 24.6-9.4 33.9 0l22.2 22.2c9.5 9.5 9.3 25-.4 34.3L136.6 216H424c13.3 0 24 10.7 24 24v32c0 13.3-10.7 24-24 24H136.6l120.5 114.8c9.8 9.3 10 24.8.4 34.3z">
                </path>
            </svg>

            <svg onclick="plusSlides(1)" id="nextBtn" width="30px" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="arrow-right" class="svg-inline--fa fa-arrow-right fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                <path fill="currentColor" d="M190.5 66.9l22.2-22.2c9.4-9.4 24.6-9.4 33.9 0L441 239c9.4 9.4 9.4 24.6 0 33.9L246.6 467.3c-9.4 9.4-24.6 9.4-33.9 0l-22.2-22.2c-9.5-9.5-9.3-25 .4-34.3L311.4 296H24c-13.3 0-24-10.7-24-24v-32c0-13.3 10.7-24 24-24h287.4L190.9 101.2c-9.8-9.3-10-24.8-.4-34.3z">
                </path>
            </svg>
            <div id="playPause" onclick="playPauseSlides()"></div>
            <a href="/" class="captionLink captionLinkSlide">
            <div class="captionHolder"><p class="captionText zoomIn"></p></div>
            </a>
            {% for sliders in slider %}
                
                <div class="imageHolder">
                    <a class="captionLink" href="{{ sliders.Link }}">
                        <img src="{{ sliders.image }}"/>
                        <p class="captionText">{{ sliders.text }}</p>
                    </a>
                </div>
                
            {% endfor %}

        </div>
    
    </div>
    {# end Carousselle #}
    
    {# Event #}
    <div class="eventContainer" id="actu">
        <h2 class="eventTitle">L’actualité du street art à Paris</h2>

        <div class="allEvent">
         {% for agenda in agenda %}
            <div class="eventContent">
               <a href="{{ agenda.link }}" target="_blank">
                    <div class="backgroundEvent" style=" background-image: url('{{ agenda.picture }}')"></div>
                </a>
                <div class="TextEvent">
                    <h2>{{ agenda.title }}</h2>
                    <p>{{ agenda.text }}</p>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
   
    {# end Event #}
{% endblock %}

 {% block javascripts %}
    <script src="{{ asset('js/app.js')}}"></script>
{% endblock %}
