{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/userProfil.css') }}"/>
{% endblock %}

{% block body %}

<h1 class="username">{{app.user.name}} {{app.user.surname}}</h1>
<div class="container">
    <div class="left">
     <h3>Modifier mes informations</h3>
        {{form_start(form)}}
            {{form_row(form.surname, {'label':' ','attr': {'placeholder': 'Prénom', 'class': 'name'}})}}
            {{form_row(form.name, {'label':' ','attr': {'placeholder': 'Nom', 'class': 'surname'}})}}
            {{form_row(form.email, {'label':' ', 'attr': {'placeholder': 'Email', 'class': 'email'}})}}
            {{form_row(form.password, {'label':' ', 'attr': {'placeholder': 'Mot de passe', 'class': 'password'}})}}
            {{form_row(form.confirm_password, {'label':' ', 'attr': {'placeholder': 'Confirmer', 'class': 'password'}})}}
            <button type="submit"class="dialog-btn">Modifier</button>
        {{form_end(form)}}
    </div>

    <div class="right">
        <div class="artisteFollow">
        <h3> Artistes que je suis</h3>
            {% for artiste in user.follow %}
                <a href="{{ path('show_artiste',{'id': artiste.id}) }}" title="{{artiste.name}}">
                    <img src="{{artiste.image}}">
                </a>
                <br>
            {% endfor %}
        </div>

        <div class="artworkliked">
        <h3> Les dernière oeuvres aimées </h3>
                {% for artwork in user.artworkLike %}
                    <a href="{{ path('show_artwork',{'id': artwork.id}) }}">
                        <img src="{{artwork.picture}}">
                    </a>
                    <br>
            </div>
        </div>
    </div>
</div>
{% endblock %}